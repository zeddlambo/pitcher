  <% if user_signed_in? %>
    <div class = "panel panel-default">
        <div class = "panel-heading">
          <h1>Summary of Results</h1>
        </div>
        <div class ="panel-body">
          <table class="table">
            <thead>
             <tr>
                <th>Cases</th>
                <th>Security</th>
                <th>Total Points</th>
                <th>Average Points Per Call</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
          <tbody>
              <tr>
                <td><%= advertisers.size></td>
                <td><% if (advertiser.security == 'yes' || 'Yes') %>
                      <span class="label label-success">
                        <%= advertiser.security %></span>
                      </td>
                    <% else %>
                      <span class="label label-danger">
                        <%= advertiser.security %></span>
                      </td>
                  <% end %>
                <td><%= advertiser.cid %></td>
                <td><%= advertiser.issue %></td>
                <td>
                  <% if advertiser.points < 12 %>
                    <span class="label label-danger">
                      <%= advertiser.points %></span>
                    </td>
                  <% else %>
                    <span class="label label-success">
                      <%= advertiser.points %></span>
                  <% end %>
                  </td>
                <td class="col-md-1"><%= link_to 'Case Card', advertiser, class: "btn btn-warning" %></td>
                <td class="col-md-1"><%= link_to 'Delete', advertiser, method: :delete, data: { confirm: 'Are you sure you want to delete this case from your records?' }, class: "btn btn-danger" %></td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
        </br>
        <div class= "panel-footer">
          <%= link_to 'New Case', new_advertiser_path, class: "btn btn-success btn-lg" %>
        </div>
      </div>
  <% else %>
  <div class="jumbotron center">
       <h1>Sign in to continue...</h1>
       <p>
         <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
         <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
      </p>    
<% end %>